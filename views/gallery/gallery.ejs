<%- include ("../partials/header") %>

<head>
    <link rel="stylesheet" type="text/css" href="../css/gallery/gallery.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link
        href="https://fonts.googleapis.com/css2?family=Sacramento&family=Hind+Vadodara&family=Anton&family=Open+Sans+Condensed:wght@300&display=swap"
        rel="stylesheet">
</head>

<div class="container">
    <div class="jumbotron" id="jumbo">
        <div class="inner">
            <h1 style="color:#f5d9d5;font-family: 'Just Another Hand', cursive;font-size: 5rem;" data-aos="zoom-out">
                <%= username %>'s Gallery </h1>
            <p style="color:#FEFEDF;font-family: 'Sacramento', cursive;font-size: 2rem;">because a picture is worth a thousand words...</p>
        </div>
    </div>
</div>

<div class="container">
    <% if(isLoggedIn) {%>
    <div id="add">
        <button class="btn btn-sm btn-outline-dark"><span><i class="fas fa-plus"></i> </span>New Memory</button>
        <hr>
    </div>
    <% } %>
    <div class="btn-group" id = "dropdown">
        <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            <% if(sort) { %>
                <%= sort %>
            <% } else { %>
            Latest First
            <% } %>
        </button>
        <div class="dropdown-menu dropdown-menu-right">
            <button class="dropdown-item" type="button" id = "new">Latest first</button>
            <button class="dropdown-item" type="button" id = "old" >Oldest First</button>
        </div>
    </div>
    <br>
    <br>
    <div id = "fromto">
        <span>Filter By : </span>
        <% if(from && to) { %>
        <input type="date" id="from" name = "from" style="display: inline;" value=<%= from %> >
        -
        <input type="date" id="to" name = "to" style="display: inline;" value=<%= to %> >
        <% } else {%>
            <input type="date" id="from" name = "from" style="display: inline;">
            <input type="date" id="to" name = "to" style="display: inline;" >
        <% } %>
        <button class="btn" id="ft"><i class="fas fa-arrow-alt-circle-right"></i></button>
    </div>
    <br>
    <div id="memories">
        <%- include ("../partials/carousal") %>
    </div>
</div>

<h1 style="display: none;" id = "sortt"><%=sort%></h1>
<h1 style="display:none;" id = "fromm"><%=from%></h1>
<h1 style="display:none;" id="too"><%=to%></h1>


<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 1000,
    });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
    integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous">
</script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
</script>
<script type="text/javascript" src="../scripts/gallery/gallery.js"></script>
<%- include ("../partials/footer") %>
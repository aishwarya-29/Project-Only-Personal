<%- include ("../partials/header") %>

<head>
    <link rel="stylesheet" type="text/css" href="../css/wishlists/movies.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link
        href="https://fonts.googleapis.com/css2?family=Sacramento&family=Hind+Vadodara&family=Anton&family=Open+Sans+Condensed:wght@300&display=swap"
        rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@500&display=swap" rel="stylesheet">
    <style>
        #header {
            width: 100%;
            height: 14rem;
            background-image:
                url(https://images.unsplash.com/photo-1484480974693-6ca0a78fb36b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1052&q=80);
            background-position: center;
            background-repeat: no-repeat;
        }
    </style>
</head>

<div class="container">
    <div class="jumbotron" id="jumbo">
        <div class="inner">
            <h1 style="color:#6D5E90;font-family: 'Anton',sans-serif;font-size: 5rem;" data-aos="zoom-out">
                TO-DO LIST </h1>
        </div>
    </div>
</div>


<div id="lists">
    <div id="container">
        <h1>To-Do List <span id="toggle-form"><i class="fa fa-plus"></i></span></h1>
        <% if (isLoggedIn) { %>
        <input type="text" placeholder="Add New Todo">
        <% } %>
        <ul id="listul">
            <% todolist["todo"].forEach(function(todo){ %>
            <li>
                <% if (isLoggedIn) { %>
                <span><i class=" fas fa-check"></i></span>
                <% } %>
                <%= todo %>
            </li>
            <% }); %>
        </ul>
    </div>

    <div id="container">
        <h1>Done!</h1>

        <ul id="listul2">
            <% doneTodo["todo"].forEach(function(done){ %>
            <li>
                <% if (isLoggedIn) { %>
                <span><i class="fa fa-trash"></i></span>
                <% } %>
                <%= done %>
            </li>
            <% }); %>
        </ul>   
    </div>
</div>

<span id="identifier" style="display: none;">ToDo</span>
<span id="img" style="display: none;"></span>

<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 1000,
    });
</script>
<script type"text/javascript" src="../scripts/wishlist.js" ></script>
<%- include ("../partials/footer") %>